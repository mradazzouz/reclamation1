{% extends 'intervshow.html.twig' %}

{% block body %}
    <h1>Intervenant</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ intervenant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ intervenant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ intervenant.prenom }}</td>
            </tr>
            <tr>
                <th>Departement</th>
                <td>{{ intervenant.departement }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('intervenant_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('intervenant_edit', { 'id': intervenant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
